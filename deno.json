{
  "tasks": {
    "build": "deno run -A build.ts"
  },
  "imports": {
    "@jasone/common": "./packages/common/src/main.ts",
    "@jasone/core": "./packages/core/src/main.ts",
    "@jasone/types": "./packages/types/src/main.ts",

    "@std/assert": "jsr:@std/assert@^0.223.0"
  },
  "test": {
    "include": ["test/**/*.ts"]
  },
  "bench": {
    "include": ["benchmark/**/*.ts"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "compilerOptions": {
    "strict": true
  }
}
